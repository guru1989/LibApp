<div id="notice"><%= flash.now[:notice] %></div>
<div style="text-align: center">

  <h3>Existing Users Login Page</h3><br><br>
  <%= form_for(:session, url: login_path) do |f| %>

    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div><br>
    
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div><br>
    
    <div class="field">
      <p><%= f.radio_button :option, "member" , checked: true %>
      <%= f.label :option, "Member", :value => "member" %></p>
      <p><%= f.radio_button :option ,"admin" %>
      <%= f.label :option, "Admin", :value => "admin"  %></p>
    </div>

  <div class="actions">
    <%= f.submit "Login" %>
  </div>

<% end %>
</div>
